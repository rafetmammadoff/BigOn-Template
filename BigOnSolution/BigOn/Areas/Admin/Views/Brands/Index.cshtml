@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Bootstrap Basic Tables</h4>
                    <span>
                        lorem ipsum dolor sit amet, consectetur adipisicing
                        elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Bootstrap Table</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Basic Table</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">
            <h5>Basic Table</h5>
            <span>use class <code>table</code> inside table element</span>

        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="operation">
                                <a asp-action="create" class="btn btn-success">
                                    <i class="fas fa-plus nm"></i>
                                </a>
                            </th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    
                                    <td>@item.Name</td>
                                <td class="operation">
                                    <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="fas fa-pencil nm"></i>
                                    </a>
                                    <a asp-action="details" asp-route-id="@item.Id" class="btn btn-secondary">
                                        <i class="fas fa-eye nm"></i>
                                    </a>
                                    <a asp-action="delete" onclick="removeEntity(event,@item.Id,'@item.Name')" class="btn btn-danger">
                                        <i class="fas fa-trash nm"></i>
                                    </a>
                                </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Basic table card end -->

    </div>
@section addJs{
        <script>
            function removeEntity(e,id,name){
                e.preventDefault();
                alert(`${id}---${name}`)
            }
        </script>
    }