@model FaqCreateCommand
@{
    ViewData["Title"] = "Create";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Bootstrap Basic Tables</h4>
                    <span>
                        lorem ipsum dolor sit amet, consectetur adipisicing
                        elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Bootstrap Table</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Basic Table</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">
            <h5>Basic Table</h5>
            <span>use class <code>table</code> inside table element</span>

        </div>
        <div class="card-block table-border-style">
            <div class="card-block">
                <h4 class="sub-title">Basic Inputs</h4>
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="Question" class="col-sm-2 col-form-label">
                            
                        </label>
                        <div class="col-sm-10">
                            <input asp-for="Question" type="text" class="form-control">
                            <span asp-validation-for="Question" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Answer" class="col-sm-2 col-form-label">

                        </label>
                        <div class="col-sm-10">
                            <textarea class="form-control editor" id="editor" asp-for="Answer"></textarea>
                            <span asp-validation-for="Answer" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12 d-flex justify-content-end">
                            <button class="btn btn-success mr-2">Save</button>
                            <a class="btn btn-info" asp-action="Index">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Basic table card end -->

</div>

@section addJs{
    <script src="~/libs/ckeditor5/ckeditor.min.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector("#editor"))
            .catch(error => {
                console.error(error);
            });
    </script>
                    }